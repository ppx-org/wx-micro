.maskView {position:fixed;top:0;left:0;width:100%;height:100%;background-color:black;opacity: 0.5;}


.originPrice {margin-left:10rpx;color:gray;}
.originprice text {text-decoration:line-through;}

.selectSku {margin:0rpx 10rpx;font-size:28rpx;height:76rpx;display:flex;align-items:center;justify-content:space-between;}
.selectSku image {width:30rpx;height:30rpx;}

.productArgs {margin:0rpx 10rpx;font-size:28rpx;height:76rpx;display:flex;align-items:center;justify-content:space-between;border-top:1px solid #EEEEEE;}
.productArgs image {width:30rpx;height:30rpx;}


.action {position:fixed;left:0;bottom:0;height:80rpx;display:flex;border-top:1px solid #EEEEEE;font-size:26rpx}
.favorite {width:250rpx;display:flex;justify-content:space-around;align-items:center;background-color:white;}
.favoriteItem {display:flex;justify-content:space-around;align-items:center;}
.favoriteItem image {width:32rpx;height:32rpx;}

.cart {width:250rpx;display:flex;justify-content:space-around;align-items:center;color:white;background-color:orange}
.buy {width:250rpx;display:flex;justify-content:space-around;align-items:center;color:white;background-color:#FE7506}




.skuView {
  display:flex;flex-direction:column;position:fixed;left:0;
  transition: bottom 0.4s;height:850rpx;background-color:white;width:100%;justify-content:space-between;z-index:3000;
}




.skuImg {position:relative;top:-40rpx;width:210rpx;height:210rpx;border:1rpx solid #EEEEEE;background-color:white;border-radius:10rpx;}
.skuImg image {width:200rpx;height:200rpx;padding:5rpx;}
.skuDesc {display:flex;flex-direction:column;justify-content:space-between;width:420rpx;font-size:28rpx;height:150rpx;}
.buyNum {height:100rpx;border-top:1rpx solid #EEEEEE;border-bottom:1rpx solid #EEEEEE;display:flex;justify-content:space-between;margin:30rpx  15rpx 0 15rpx;font-size:30rpx;align-items:center;}

.buyNumAction {display:flex;align-items:center;}
.buyNumAction view {width:70rpx;text-align:center;font-weight:bold}

.firmOrder {
  display:flex;background-color:#FE7506;height:80rpx;width:100%;color:white;font-size:30rpx;align-items:center;justify-content:space-around;
}

.skuItemView {
  display:flex;align-items:center;justify-content:space-around;
  max-width:210rpx;height:32rpx;
  background-color:#EEEEEE;padding:8rpx;margin:4rpx;border-radius:20rpx;
}

.skuItemView text {
  padding:10rpx;line-height: 40rpx;text-align:center;
  overflow:hidden;text-overflow:ellipsis;display:-webkit-box !important; -webkit-line-clamp:1;-webkit-box-orient:vertical

}



.argsView {
  display:flex;flex-direction:column;position:fixed;left:0;
  transition: bottom 0.4s;height:850rpx;background-color:white;width:100%;z-index:3000;
  border-radius: 20rpx 20rpx 0 0;
  justify-content:space-between;
}
.argsTitle {
  margin-top:10rpx;font-size:30rpx;display:flex;align-items:center;justify-content:space-around;
}

.argsItem {
  margin:20rpx 20rpx;font-size:30rpx;height:30rpx;display:flex;
  padding-bottom: 10rpx;
  border-bottom:1px solid #EEEEEE;
}

.finish {
  display:flex;background-color:#FE7506;height:80rpx;width:100%;color:white;font-size:30rpx;align-items:center;justify-content:space-around;
}